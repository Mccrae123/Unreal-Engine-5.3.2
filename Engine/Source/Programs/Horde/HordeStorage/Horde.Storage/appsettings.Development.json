{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Horde.Storage"
    }
  },

  "Horde_Storage": {
    "refDBImplementation": "mongo",

    "TransactionLogWriterImplementation": "memory",

    "treeStoreImplementation": "memory",

    "replicationLogWriterImplementation": "memory",

    "blobIndexImplementation": "memory"
  },

  // settings s3 defaults to use a local minio instance, same as tests, not enabled by default but useful to do local testing
  "S3": {
    "ConnectionString": "http://127.0.0.1:9000",
    "ForceAWSPathStyle": true, // required by minio,
    "SetBucketPolicies": false, // minio does not support bucket access policies
    "BucketName": "local-horde-storage-bucket"
  },
  "AWSCredentials": {
    // minio and health checks expect access keys to have been set
    "AwsAccessKey": "FSYPTVCPKC2IV5D1U8RE",
    "AwsSecretKey": "WaUf4Zq+J6YMlvbCVvTRkQJIPc7DvZwTm5UP0tPJ"
  },

  "Callisto": {
    "ConnectionString": "http://localhost"
  },

  "GC": {
    "BlobCleanupServiceEnabled": false,
    "CleanOldRefRecords": false,
    "CleanOldBlobs": false
  },

  "Replication": {
    "StateRoot": "./ganymede",
    "ReplicationPollFrequencySeconds": 15,
    "CurrentSite": "local-test",
    "Replicators": [
      {
        "ReplicatorName": "Local test",
        "NamespaceToReplicate": "ue4.ddc",

        "ConnectionString": "https://jupiter.devtools-dev.epicgames.com"
      }
    ]
  },

  "Auth": {
    "Method": "Disabled"
  },

  "Mongo": {
    "ConnectionString": "mongodb://root:abc123@localhost:27017",
    "RequireTls12": false
  },

  "Scylla": {
    "LocalDatacenterName": "datacenter1",
    "LocalKeyspaceSuffix": "local"
  },

  "DynamoDb": {
    "ConnectionString": "localhost:8000",
    "UseGlobalTables": false
  },

  "Jupiter": {
    "CurrentSite": "local",
    "DisableAuthOnPorts": [
      57003
    ]
  },
  "ConsistencyCheck": {
    "Enabled": false
  },

  "Namespaces": {
    "Policies": {
      "ue4.ddc": {
        "Claims": [ "UE4" ]
      },
      "ue.ddc": {
        "Claims": [ "UE4" ],
        "StoragePool": "ddc2"
      },
      "*": {
        "Claims": [ "*" ]
      }
    }
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:57001"
      },
      "Http2": {
        "Url": "http://localhost:57002",
        "Protocols": "Http2"
      },
      "AuthDisabledHttp": {
        "Url": "http://localhost:57003"
      }
    }
  }
}
