{
  "Serilog": {
    "MinimumLevel": "Debug",
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "WriteTo": [
      {
        "Name": "File",
		"Args": {
			"path": "%SKEIN_CLI_LOGPATH%/skein.log",
			"rollingInterval": "Day",
			"outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level:w3}] {Message:lj}{NewLine}{Exception}"
		}
      }
    ]
  }
}